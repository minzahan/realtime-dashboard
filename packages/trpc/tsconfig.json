{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "types": ["node"], // âœ… THIS is what tells TS to load `events` types
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".", // Required for paths to work
    "paths": {
      "backend/*": ["apps/backend/*"],
      "trpc/*": ["packages/trpc/*"]
    }
  },
  "include": ["**/*.ts"]
}
